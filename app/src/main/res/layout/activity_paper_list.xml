<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paper_list_dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nulldreams.wowpaper.activity.PaperListActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/paper_list_srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/paper_list_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/grid_padding_horizontal"
                android:paddingRight="@dimen/grid_padding_horizontal"
                />
        </android.support.v4.widget.SwipeRefreshLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/paper_list_tb"
            style="@style/ToolbarStyle"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/paper_list_nav_rv"
        style="@style/DrawerStyle"
        android:layout_gravity="end|right"
        android:paddingTop="64dp"
        android:paddingBottom="@dimen/paper_list_drawer_padding_bottom"
        android:overScrollMode="never"
        />
</android.support.v4.widget.DrawerLayout>