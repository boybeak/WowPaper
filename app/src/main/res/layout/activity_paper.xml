<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nulldreams.wowpaper.activity.PaperActivity"
    >
    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/paper_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/paper_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:visibility="gone"
        />
    <FrameLayout
        android:id="@+id/paper_position_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/colorHalfBlack"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/paper_position_thumb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            />
        <View
            android:id="@+id/paper_position_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPlaceHolder"
            android:visibility="gone"
            />
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/paper_info_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:layout_above="@+id/paper_position_layout"
        android:fadingEdge="none"
        android:requiresFadingEdge="none"
        android:overScrollMode="never"
        />
    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/paper_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_above="@+id/paper_info_rv"
        android:visibility="gone"
        android:max="100"
        />
    <LinearLayout
        android:id="@+id/paper_tb_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorHalfBlack"
        >
        <View
            android:id="@+id/paper_status_bar_holder"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            />
        <android.support.v7.widget.Toolbar
            android:id="@+id/paper_tb"
            android:background="@android:color/transparent"
            style="@style/ToolbarStyle"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/paper_menu_layout"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/paper_tb_layout"
        android:layout_margin="@dimen/margin_big"
        >
        <ImageView
            android:id="@+id/paper_share_btn"
            android:alpha="0"
            style="@style/RoundBtnStyle"
            app:srcCompat="@drawable/ic_share_variant"
            />
        <ImageView
            android:id="@+id/paper_like_btn"
            android:alpha="0"
            style="@style/RoundBtnStyle"
            app:srcCompat="@drawable/ic_heart_sel"
            />
        <ImageView
            android:id="@+id/paper_set_btn"
            style="@style/RoundBtnStyle"
            app:srcCompat="@drawable/ic_check"
            />
        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/paper_pb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top|center_horizontal"
            android:visibility="invisible"
            style="@style/Widget.AppCompat.ProgressBar"
            />
    </FrameLayout>
</RelativeLayout>
